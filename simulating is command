#include <stdio.h>
#include <dirent.h>  // Directory functions

int main() {
    DIR *d;
    struct dirent *dir;

    // Open current directory
    d = opendir(".");
    if (d) {
        printf("Files in current directory:\n");
        while ((dir = readdir(d)) != NULL) {
            printf("%s  ", dir->d_name);
        }
        printf("\n");
        closedir(d);
    } else {
        perror("opendir");
    }

    return 0;
}
