#include <stdio.h>

int main() {
    int n, start, length, i, j;
    int disk[50] = {0};  // 0 = free, 1 = allocated

    printf("Enter number of files: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nFile %d - Enter starting block and length: ", i+1);
        scanf("%d %d", &start, &length);

        // check if free
        int free = 1;
        for (j = start; j < start + length; j++) {
            if (disk[j] == 1) { free = 0; break; }
        }

        if (free) {
            for (j = start; j < start + length; j++)
                disk[j] = 1;
            printf("File %d allocated in blocks: ", i+1);
            for (j = start; j < start + length; j++)
                printf("%d ", j);
            printf("\n");
        } else {
            printf("File %d cannot be allocated (space not free)\n", i+1);
        }
    }

    printf("\nDisk status:\n");
    for (i = 0; i < 50; i++) {
        printf("%d:%d  ", i, disk[i]);
        if ((i+1)%10 == 0) printf("\n");
    }

    return 0;
}
