#include <stdio.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd[2];
    char msg[] = "Hello Child!";
    char buffer[50];

    pipe(fd);  // create pipe

    if (fork() == 0) {  
        // Child process
        read(fd[0], buffer, sizeof(buffer));
        printf("Child received: %s\n", buffer);
    } else {  
        // Parent process
        write(fd[1], msg, strlen(msg)+1);
    }
    return 0;
}
